<% for post in @posts %>
<div class="post persistent_area">
  <div class="title persistent_header"><%= post.title %></div>
  <div class="content"><%= post.content %></div>
  <div>
    <span><%= link_to "Edit", edit_admin_post_path(post), :remote => true %></span>
    <span><%= link_to "Remove", admin_post_path(post), :remote => true, :confirm => 'Are you sure?', :method => :delete %></span>
  </div>
</div>
<% end %>
